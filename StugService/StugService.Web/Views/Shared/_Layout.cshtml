<body>
    <div id="container">
        <header id="header">
            <div id="title">
                @Html.Partial("_Logo")   
            </div>

            <div id="logindisplay">
               <a href="/Sv/">svenska</a>
               <a href="/En/">english</a>
               <a href="/De/">deutsch</a>
               <a href="/Nl/">nederland</a>
            </div>

            <div id="menucontainer" role="navigation">
                @Html.Partial("_Menu")
            </div>
        </header>
        @RenderBody()
        <footer id="footer">
        @if (Request.IsStartPage())
        {
            @Html.Partial("_FooterStartPage")
        }
        else
        {
            @Html.Partial("_Footer")
        }
        <div id="footer-bar">
            <span>Bankgiro: 5768-0464 | Org.nr: 810402-1913</span>
            <div class="addthis_toolbox addthis_default_style ">
